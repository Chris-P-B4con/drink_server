datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  username   String   @unique
  email      String   @unique
  password   String
  privileges Int      @default(0)

  drinks UserDrinks[]
  tokens Token[]
  @@map(name: "user")
}

model Drinks {
  id         Int    @id @default(autoincrement())
  drink_name String @unique
  volume     Float
  price      Float
  available  Int
  image      String

  user_drinks UserDrinks[]
  @@map(name: "drinks")
}

model UserDrinks {
  id        Int      @id @default(autoincrement())
  orderedAt DateTime @default(now())
  paid      Boolean  @default(false)
  paidAt    DateTime

  drink   Drinks @relation(fields: [drinkId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
  drinkId Int
  userId  Int
  @@map(name: "userdrinks")
}

model Token {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  type       TokenType
  emailToken String?   @unique
  valid      Boolean   @default(true)
  expiration DateTime

  user   User @relation(fields: [userId], references: [id])
  userId Int
  @@map(name: "token")
}

enum TokenType {
  EMAIL // used as a short lived token sent to the user's email
  SESSION
}
